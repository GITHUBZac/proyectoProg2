<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head')  %> 

<body>
    <%- include('./partials/header')  %> 
    <main>
        <div class="post-detail container">
            <section class="center main-content post">
                <div class="info-usuario">
                    <img src="<%= posteo.foto %> " alt="">
                    <p><a href="/users/detalleUsuario/<%= posteo.idPosteo %> "><%= posteo.nombre %></a></p>
                </div>
                <img class="photo" src="<%= posteo.post %>" alt="">
            </section>
            <section class="right">
                <h4>Comentarios</h4>
                <section class="comments">
                    <form action="" class="comment-form">
                        <input type="text" class="input" placeholder="Agregar comentario">
                        <button type="submit">Comentar</button>
                    </form>
                    <div>


                        <% for( let i = 0; i < comentarios.length; i++ ) { %>
                            <article class="comment">
                                <img src="<%= comentarios[i].foto %> " alt="">
                                <section class="content">
                                    <a class="user" href="/users/detalleUsuario/<%= comentarios[i].id_usuario %> "><%= comentarios[i].nombre %></a>
                                    <span class="text"><%= comentarios[i].comentario %></span>
                                </section>
                            </article>
                        <% } %>
                        
                        
                    </div>
                </section>
            </section>
        </div>
    </main>

    <%- include('./partials/footer')  %> 
</body>

</html>