<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head')  %> 

<body>
    <%- include('./partials/header')  %> 

    <main>
        <div class="user-detail container">
            <section class="top main-content">
                <img class="profile" src="<%= data.foto %> " alt="">
                <div class="info-usuario">
                    <p><%= data.nombre %> </p> 
                    <a class="follow" href="/users/editarPerfil/"><i class="fa-solid fa-user-gear"></i></a>
                    <ul class="meta">
                        <li><%= data.posteos %> </li>
                        <li><%= data.seguidores %> </li>
                        <li><%= data.seguidos %> </li>
                    </ul>
                </div>
            </section>
            <section class="bottom">
                <article class="post">
                    <a href="/post/detallePost">
                        <img src="<%= posteos[0].post %> " alt="">
                        <p><%= posteos[0].texto %> </p>
                    </a>
                </article>
                
            </section>
        </div>
    </main>

    <%- include('./partials/footer')  %> 
</body>

</html>