<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head')  %> 

<body>
    <%- include('./partials/header')  %> 

    <main>
        <section class="center main-content">
            
            <% for( let i = 0; i < listaPosteos.length; i++ ) { %>
                <article class="post">
                    <div class="info-usuario ">
                        <img src="<%= listaPosteos[i].foto %> " alt="">
                        <h4>
                            <a href="/users/detalleUsuario/<%= listaPosteos[i].foto %> "><%= listaPosteos[i].nombre %></a>
                        </h4>
                    </div>
                    <div class="post-body">
                        <a href="/post/detallePost/<%= listaPosteos[i].idPosteo %> ">
                            <img src="<%= listaPosteos[i].post %>" alt="">
                        </a>
                    </div>
                    <ul class="post-reacciones">
                        <li>
                            <i class="fa-regular fa-heart"></i>
                        </li>
                        <li>
                            <i class="fa-regular fa-comment"></i>
                        </li>
                    </ul>
                    <div class="post-comentarios">
                        <h4>Comentarios</h4>
                        <ul>
                            <li>
                                <a href="/users/detalleUsuario/<%= listaPosteos[i].comentarios.idUsuarios %> "><%= listaPosteos[i].comentarios.nombreUsuario%> </a>
                                <span><%= listaPosteos[i].comentarios.texto%></span>
                            </li>
                            
                            <a href="/post/detallePost">Ver m√°s...</a>
                        </ul>
                    </div>
                </article>
            <% } %>
            
            









            
        </section>    
    </main>

    <%- include('./partials/footer')  %> 

</body>

</html>